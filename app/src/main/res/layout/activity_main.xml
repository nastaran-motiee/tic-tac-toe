<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001029"
    tools:context=".MainActivity">

    <!--Scores-->

    <LinearLayout
        android:id="@+id/HeartFrame"
        android:layout_width="200dp"
        android:layout_height="143dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/HeartBorder"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="#A63F51B5"
            android:elevation="20dp"
            android:fadingEdgeLength="10dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="#001029">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="30dp"
                    app:srcCompat="@drawable/cross" />
            </FrameLayout>
        </FrameLayout>


        <TextView
            android:id="@+id/ScoreX"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/BrainFrame"
        android:layout_width="200dp"
        android:layout_height="143dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/BrainBorder"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="#A63F51B5"
            android:elevation="20dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="#001029">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="30dp"
                    app:srcCompat="@drawable/circle" />
            </FrameLayout>
        </FrameLayout>


        <TextView
            android:id="@+id/ScoreO"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

    <!--Button 1-->
    <RelativeLayout
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/btn5"
        android:layout_marginBottom="20dp"
        android:layout_toStartOf="@id/btn2"
        android:background="#001029">

        <ImageView
            android:id="@+id/buttonImage1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>

    </RelativeLayout>

    <!--Button 2-->
    <RelativeLayout
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/btn5"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="#001029">

        <ImageView
            android:id="@+id/buttonImage2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>

    </RelativeLayout>

    <!--Button 3-->
    <RelativeLayout
        android:id="@+id/btn3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/btn5"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@id/btn2"
        android:background="#001029">

        <ImageView
            android:id="@+id/buttonImage3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>

    </RelativeLayout>

    <!--Button 4-->
    <RelativeLayout
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/btn5"
        android:background="#001029">

        <ImageView
            android:id="@+id/buttonImage4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>


    </RelativeLayout>

    <!--Button 5-->
    <RelativeLayout
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#001029">

        <ImageView
            android:id="@+id/buttonImage5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>


    </RelativeLayout>

    <!--Button 6-->
    <RelativeLayout
        android:id="@+id/btn6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/btn5"
        android:background="#001029">

        <ImageView
            android:id="@+id/buttonImage6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>

    </RelativeLayout>

    <!--Button 7-->
    <RelativeLayout
        android:id="@+id/btn7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/btn5"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/btn8"
        android:background="#001029">

        <ImageView
            android:id="@+id/buttonImage7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>

    </RelativeLayout>

    <!--Button 8-->
    <RelativeLayout
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/btn5"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="#001029">

        <ImageView
            android:id="@+id/buttonImage8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>

    </RelativeLayout>

    <!--Button 9-->
    <RelativeLayout
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/btn5"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/btn8"
        android:background="#001029">

        <ImageView
            android:id="@+id/buttonImage9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>

    </RelativeLayout>

    <!--Horizontal lines-->
    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="8dp"
        android:layout_above="@id/btn5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="#E8990E"></RelativeLayout>

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="8dp"
        android:layout_below="@id/btn5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="#E8990E"></RelativeLayout>

    <!--Vertical lines-->
    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="350dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="-14dp"
        android:layout_toStartOf="@id/btn5"
        android:background="#E8990E"></RelativeLayout>

    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="350dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="-14dp"
        android:layout_toEndOf="@id/btn5"
        android:background="#E8990E"></RelativeLayout>

    <!--Reset button-->
    <Button
        android:id="@+id/Reset"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:backgroundTint="#E01688"
        android:text="Reset"
        android:textColor="@color/white"
        android:textSize="20sp"></Button>

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>